# Server Configuration
PORT=8080
NODE_ENV=development

# Database
DB_PATH=./database/bilflow.db

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=bil-flow-secret-key-2024

# ==================== SMS Configuration ====================

# SMS Provider: smsir, kavenegar, ghasedak
SMS_PROVIDER=smsir

# SMS.ir Configuration (توصیه می‌شود)
SMSIR_API_KEY=your_smsir_api_key_here
SMSIR_TEMPLATE_ID=100000
SMS_SENDER=10008663

# Kavenegar Configuration
KAVENEGAR_API_KEY=your_kavenegar_api_key_here

# Ghasedak Configuration
GHASEDAK_API_KEY=your_ghasedak_api_key_here

# OTP Mock Mode (true = mock, false = real SMS)
OTP_MOCK=true

# ==================== Payment Gateway ====================

# Zarinpal
ZARINPAL_MERCHANT_ID=your_merchant_id_here
ZARINPAL_SANDBOX=true

# Card Transfer Settings
CARD_NUMBER=6037-9977-xxxx-xxxx
CARD_HOLDER_NAME=نام دارنده کارت
BANK_NAME=بانک ملی

# ==================== Rate Limiting ====================
RATE_LIMIT_MAX=100
OTP_RATE_LIMIT_MAX=3
LOGIN_RATE_LIMIT_MAX=50

# ==================== Email Configuration ====================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@bilflow.com

# ==================== Other Settings ====================
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
